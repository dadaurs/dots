#!/bin/sh
#vim:filetype=sh
basedir="$HOME/Cours"
scriptdir="$HOME/scripts/lectures"
dmenu_cmd="dmenu -i"
author="David Wiedemann"
date=$(date "+%a %d %b")

currentcoursedir="$basedir/current-course"
