#!/bin/sh
#vim:filetype=sh



dark_or_light(){
dark_light=$(echo -e "Dark\nLight" | dmenu -i -p "Theme?")
        case $dark_light in
                'Dark')theme=$( ls $HOME/.local/lib/python3.10/site-packages/pywal/colorschemes/dark/ | sed 's/\.json//' | dmenu -i
) && wal --theme $theme  &&  feh --bg-scale $(find $HOME/wallpapers/dark/* |
sxiv -tio &)
				echo "set background=dark" > $HOME/.cache/dark_or_lightscheme

 ;;
                'Light')theme=$( ls $HOME/.local/lib/python3.10/site-packages/pywal/colorschemes/light/ | sed 's/\.json//' | dmenu -i ) && wal -l --theme $theme  && feh --bg-scale   $(find $HOME/wallpapers/light/* | sxiv -tio &)
				echo "set background=light" > $HOME/.cache/dark_or_lightscheme
;;
        esac
}
wallpapset(){
        dark_light=$(echo -e "Dark\nLight" | dmenu -i -p "Theme?")
                case $dark_light in
                        'Light')wallp=$(find $HOME/wallpapers/*/* | sxiv -tio &) &&\
				echo "set background=light" > $HOME/.cache/dark_or_lightscheme
                                wal -l -i $wallp 
				;;
                        'Dark')wallp=$(find $HOME/wallpapers/*/* | sxiv -tio &) &&\
				echo "set background=dark" > $HOME/.cache/dark_or_lightscheme
                                wal  -i $wallp
				;;
                esac
}
theme_wallpaper=$(echo -e "Premade Theme\nWallpaper" | dmenu -i)
case $theme_wallpaper in
        'Premade Theme')dark_or_light;;
        'Wallpaper')wallpapset;;
esac



if pgrep -x bspwm; then
    if test -f $HOME/.cache/wal/colors.sh; then
        source $HOME/.cache/wal/colors.sh
        bspc config normal_border_color "$background"
        bspc config focused_border_color "$foreground"
    else
        bspc config normal_border_color "#000000"
        bspc config focused_border_color "#EEE8D5"
    fi
    /home/dada/scripts/lemonbar/bspwm/bar.sh update
fi
if pgrep -x xmonad-x86_64-l; then
    xmonad --recompile && xmonad --restart
fi

if pgrep -x qutebrowser; then
	qutebrowser :config-source
fi
#pywalfox update &
#spicetify update &
#nvim-ctrl ":source ~/.config/nvim/init.vim" &
#/home/david/.telegram-palette-gen/telegram-palette-gen --wal
